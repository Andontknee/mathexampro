<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/question_text_view_timed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/timer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Left: 10:00"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/options_group_timed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/skip_counter_timed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skips left: 2"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/prev_button_timed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"/>

        <Button
            android:id="@+id/next_button_timed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginLeft="8dp"/>
        <Button
            android:id="@+id/skip_button_timed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip Question"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/submit_button_timed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/reset_button_timed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Exam"
        android:layout_marginTop="8dp"/>
</LinearLayout>